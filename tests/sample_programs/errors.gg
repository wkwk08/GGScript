/* This file contains multiple intentional lexical errors 
    to test the lexer's error handling.
*/

frag lobby() {
    /* ERROR 1: Invalid Character */
    frag score = 100 @ 5; /* The '@' symbol is not a valid character */
    
    /* ERROR 2: Invalid Identifier (Starts with number) */
    frag 1st_place = 1; /* Identifiers must start with a letter */
    
    /* ERROR 3: Invalid Identifier (Too long) */
    frag this_is_a_very_long_identifier_over_20_chars; /* Max 20 chars */
    
    /* ERROR 4: Malformed Operator (Single '&') */
    clutch (score > 0 & 1st_place < 2) { /* Must be '&&' */
        shout "Error";
    }
    
    /* ERROR 5: Invalid 'tag' (Character) Literal */
    tag grade = 'AB'; /* 'tag' must be exactly one character */
    
    /* ERROR 6: Invalid 'elo' (Float) Precision */
    elo pi = 3.1234567; /* 'elo' fractional part max 6 digits */
    
    /* ERROR 7: Unterminated String */
    ign name = "Jullaine; /* String is missing the closing " */
}