/* Looping Constructs Test */

frag lobby() {
    /* For loop (grind) */
    shout "Counting with grind:";
    grind(frag i = 0; i < 5; i++) {
        shout "Iteration: ", i;
    }
    
    /* While loop (retry) */
    shout "Counting with retry:";
    frag count = 0;
    retry(count < 3) {
        shout "Count: ", count;
        count++;
    }
    
    /* Do-while loop (try retry) */
    shout "Counting with try retry:";
    frag num = 0;
    try {
        shout "Number: ", num;
        num++;
    } retry(num < 3);
    
    /* Loop with break (afk) */
    shout "Loop with afk:";
    grind(frag j = 0; j < 10; j++) {
        clutch(j == 5) {
            afk;
        }
        shout "J: ", j;
    }
    
    /* Loop with continue (hop) */
    shout "Loop with hop:";
    grind(frag k = 0; k < 5; k++) {
        clutch(k == 2) {
            hop;
        }
        shout "K: ", k;
    }
    
    /* Nested loops */
    shout "Nested loops:";
    grind(frag x = 0; x < 3; x++) {
        grind(frag y = 0; y < 3; y++) {
            shout "Position: ", x, ",", y;
        }
    }
    
    ggwp 0;
}