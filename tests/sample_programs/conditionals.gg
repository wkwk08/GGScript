/* Conditional Statements Test */

frag lobby() {
    /* Simple if (clutch) */
    frag score = 85;
    
    clutch(score >= 90) {
        shout "Grade: A";
    }
    
    /* If-else (clutch-choke) */
    clutch(score >= 75) {
        shout "You passed!";
    } choke {
        shout "You failed!";
    }
    
    /* If-else if-else (clutch-choke clutch-choke) */
    clutch(score >= 90) {
        shout "Excellent!";
    } choke clutch(score >= 80) {
        shout "Very Good!";
    } choke clutch(score >= 70) {
        shout "Good!";
    } choke {
        shout "Need Improvement";
    }
    
    /* Boolean conditions */
    surebol isActive = buff;
    surebol isReady = nerf;
    
    clutch(isActive && !isReady) {
        shout "Active but not ready";
    }
    
    clutch(isActive || isReady) {
        shout "At least one is true";
    }
    
    /* Switch statement (pick) */
    frag choice = 2;
    
    pick(choice) {
        role 1:
            shout "Option 1 selected";
            afk;
        role 2:
            shout "Option 2 selected";
            afk;
        role 3:
            shout "Option 3 selected";
            afk;
        noob:
            shout "Invalid option";
            afk;
    }
    
    /* Nested conditionals */
    frag level = 5;
    surebol hasPowerUp = buff;
    
    clutch(level > 3) {
        clutch(hasPowerUp) {
            shout "Strong player with power-up!";
        } choke {
            shout "Strong player without power-up";
        }
    }
    
    /* Relational operators */
    frag x = 10;
    frag y = 20;
    
    clutch(x == y) {
        shout "Equal";
    }
    
    clutch(x != y) {
        shout "Not equal";
    }
    
    clutch(x < y) {
        shout "x is less than y";
    }
    
    clutch(x <= y) {
        shout "x is less than or equal to y";
    }
    
    clutch(y > x) {
        shout "y is greater than x";
    }
    
    clutch(y >= x) {
        shout "y is greater than or equal to x";
    }
    
    ggwp 0;
}