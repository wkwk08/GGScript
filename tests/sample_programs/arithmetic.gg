/* Arithmetic Operations Test */

frag lobby() {
    /* Basic arithmetic operations */
    frag a = 10;
    frag b = 5;
    
    /* Addition */
    frag sum = a + b;
    shout "Sum: ", sum;
    
    /* Subtraction */
    frag difference = a - b;
    shout "Difference: ", difference;
    
    /* Multiplication */
    frag product = a * b;
    shout "Product: ", product;
    
    /* Division */
    frag quotient = a / b;
    shout "Quotient: ", quotient;
    
    /* Modulus */
    frag remainder = a % b;
    shout "Remainder: ", remainder;
    
    /* Floating point arithmetic */
    elo x = 10.5;
    elo y = 2.5;
    elo result = x * y;
    shout "Float result: ", result;
    
    /* Compound operations */
    frag total = 0;
    total += 10;
    total -= 3;
    total *= 2;
    total /= 2;
    shout "Final total: ", total;
    
    ggwp 0;
}